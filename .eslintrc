{
  "root": true,
  "extends": ["airbnb", "prettier"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 8
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "no-unused-vars": ["error", { "varsIgnorePattern": "should|expect" }],
    "linebreak-style": 0,
    "comma-dangle": 0,
    "no-console": 0,
    "radix": 0
  }
}
